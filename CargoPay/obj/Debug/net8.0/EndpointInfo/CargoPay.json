{
  "openapi": "3.0.1",
  "info": {
    "title": "CargoPay",
    "version": "1.0"
  },
  "paths": {
    "/api/cards/create": {
      "post": {
        "tags": [
          "Card"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CardDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CardDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CardDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CardDto": {
        "type": "object",
        "properties": {
          "cardNumber": {
            "type": "string",
            "nullable": true
          },
          "balance": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}